{
  "name": "@dxfom/explorer",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "clean": "rimraf docs/ && mkdir docs",
    "build": "npm-run-all clean -p build:* lint",
    "build:js": "node build.mjs",
    "build:css": "windicss 'src/**/*.(html|ts|tsx)' -m -o docs/utilities.css",
    "lint": "tsc -p . && eslint --ext .ts src",
    "start": "npm-run-all clean -p watch:*",
    "watch:js": "node build.mjs --serve",
    "watch:css": "sane 'npm run build:css' src --glob=**/*.tsx"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-typescript": "^7.13.0",
    "@types/clusterize.js": "^0.17.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "babel-preset-solid": "^0.25.0",
    "esbuild": "^0.11.2",
    "esbuild-plugin-babel": "^0.2.3",
    "eslint": "^7.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sane": "^4.1.0",
    "typescript": "^4.2.3",
    "windicss": "^2.5.9"
  },
  "dependencies": {
    "@dxfom/color": "^0.1.1",
    "@dxfom/dxf": "0.0.2",
    "@dxfom/mtext": "^0.3.2",
    "@dxfom/svg": "github:dxfom/svg",
    "@dxfom/text": "^0.2.0",
    "clusterize.js": "^0.18.1",
    "solid-js": "^0.25.0",
    "svg-drag-select": "^0.4.1",
    "svg-pan-zoom-container": "^0.5.0"
  },
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  }
}
