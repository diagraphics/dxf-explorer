    "solid-js": "^0.24.13",
    "svg-drag-select": "^0.4.1",
    "svg-pan-zoom-container": "^0.5.0"
  },
  "prettier": {
    "printWidth": 140,
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  }
}
